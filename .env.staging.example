# Staging-like Environment Variables
# Copy this file to .env.staging and update with actual values
# This file is used with: docker-compose -f docker-compose.staging.yml --env-file .env.staging up

# Node Environment (production for staging-like testing)
NODE_ENV=production

# =============================================================================
# Database Configuration (Docker Compose)
# =============================================================================
POSTGRES_DB=restomarket_staging
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change_this_in_production
POSTGRES_PORT=5433

# Database URL for apps (constructed from above)
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}
DATABASE_DIRECT_URL=${DATABASE_URL}

# =============================================================================
# Better Auth Configuration
# =============================================================================
# REQUIRED: Generate with: openssl rand -base64 32
BETTER_AUTH_SECRET=your_production_grade_secret_here_min_32_chars

# Staging URL (update with your actual staging domain)
BETTER_AUTH_URL=http://localhost:3000

# =============================================================================
# OAuth Providers (Optional - configure for staging)
# =============================================================================
# GOOGLE_CLIENT_ID=your_staging_google_client_id.apps.googleusercontent.com
# GOOGLE_CLIENT_SECRET=your_staging_google_client_secret
# GITHUB_CLIENT_ID=your_staging_github_client_id
# GITHUB_CLIENT_SECRET=your_staging_github_client_secret

# =============================================================================
# Email Provider (Optional - use test mode in staging)
# =============================================================================
# RESEND_API_KEY=re_your_api_key_here
# EMAIL_FROM=staging@restomarket.com

# =============================================================================
# Application URLs
# =============================================================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3002/v1

# Redis Configuration
REDIS_PASSWORD=change_redis_password_in_production
REDIS_PORT=6380

# API Configuration
API_PORT=3002
LOG_LEVEL=info
CORS_ORIGINS=http://localhost:3000
SWAGGER_ENABLED=false

# Adminer Configuration
ADMINER_PORT=8081
