{
  "extends": "@repo/typescript-config/nest.json",
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@common/*": ["src/common/*"],
      "@config/*": ["src/config/*"],
      "@core/*": ["src/core/*"],
      "@database/*": ["src/database/*"],
      "@modules/*": ["src/modules/*"],
      "@shared/*": ["src/shared/*"],
      "@logger/*": ["src/logger/*"],
      "@repo/shared/auth": ["../../packages/shared/src/auth/index.ts"],
      "@repo/shared/*": ["../../packages/shared/src/*"]
    }
  },
  "include": ["src/**/*", "test/**/*", "*.config.ts", "*.config.mjs"],
  "exclude": ["node_modules", "dist"]
}
