{
  "extends": "@repo/typescript-config/nest.json",
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./",
    // "skipLibCheck": true,
    // "esModuleInterop": true,
    "paths": {
      "@common/*": ["src/common/*"],
      "@config/*": ["src/config/*"],
      "@core/*": ["src/core/*"],
      "@database/*": ["src/database/*"],
      "@modules/*": ["src/modules/*"],
      "@shared/*": ["src/shared/*"],
      "@logger/*": ["src/logger/*"]
    }
  },
  "include": ["src/**/*", "test/**/*", "*.config.ts", "*.config.mjs"],
  "exclude": ["node_modules", "dist"]
}
