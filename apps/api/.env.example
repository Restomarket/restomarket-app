# Application
NODE_ENV=development
APP_NAME=nestjs-clean-api
APP_PORT=3000
APP_HOST=0.0.0.0
API_PREFIX=api
API_VERSION=1
REQUEST_TIMEOUT=30000

# Database
DATABASE_URL=postgresql://myuser:MyStrongPass123@localhost:5433/mydatabase
DATABASE_POOL_MAX=10
DATABASE_IDLE_TIMEOUT=20
DATABASE_CONNECT_TIMEOUT=10
DATABASE_SSL=false
# DATABASE_SSL_CA=  # Optional: SSL certificate path for production

# Logging
LOG_LEVEL=info
LOG_PRETTY=true

# Security
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# Swagger
SWAGGER_ENABLED=true
SWAGGER_TITLE=NestJS Clean API
SWAGGER_DESCRIPTION=Production-ready API with Clean Architecture
SWAGGER_VERSION=1.0
