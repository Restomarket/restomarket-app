    "@nestjs/platform-express": "^11.1.8",
    "@nestjs/swagger": "^11.2.1",
    "@nestjs/throttler": "^6.4.0",
    "@repo/shared": "workspace:*",
    "@thallesp/nestjs-better-auth": "^2.2.5",
    "better-auth": "^1.4.18",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "compression": "^1.8.1",
    "drizzle-orm": "^0.44.7",
    "helmet": "^8.1.0",
    "mime-types": "^3.0.1",
    "multer": "^2.0.2",
    "nestjs-pino": "^4.4.1",
    "pino": "^10.1.0",
    "pino-http": "^11.0.0",
