# Test Environment Configuration
NODE_ENV=test
APP_NAME=nestjs-clean-api-test
APP_PORT=3001
APP_HOST=0.0.0.0
API_PREFIX=api
API_VERSION=1
REQUEST_TIMEOUT=30000

# Database Configuration - Use your test database
# Pooler connection (port 6543) - for application runtime
DATABASE_URL=postgresql://user:password@host:6543/database

# Direct connection (port 5432) - for migrations
DATABASE_DIRECT_URL=postgresql://user:password@host:5432/database

# Connection pool settings (smaller for tests)
DATABASE_POOL_MAX=5
DATABASE_IDLE_TIMEOUT=10
DATABASE_CONNECT_TIMEOUT=10
DATABASE_SSL=false

# Logging (less verbose in tests)
LOG_LEVEL=error
LOG_PRETTY=false

# Security
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=1000

# Swagger (disabled in tests)
SWAGGER_ENABLED=false

# Redis Configuration (optional in tests)
REDIS_URL=redis://localhost:6379

# Better Auth - Generate your own secret
BETTER_AUTH_SECRET=your-secret-key-here
BETTER_AUTH_URL=http://localhost:3001
