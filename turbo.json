{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**", "build/**", "out/**"],
      "env": ["NODE_ENV"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "start": {
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"],
      "inputs": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "test/**/*.ts",
        "test/**/*.tsx",
        "jest.config.*",
        "tsconfig.json"
      ]
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "test:cov": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"]
    },
    "test:e2e": {
      "dependsOn": ["^build"],
      "outputs": [],
      "cache": false
    },
    "lint": {
      "dependsOn": ["^build"],
      "outputs": [],
      "inputs": ["src/**/*.ts", "src/**/*.tsx", "eslint.config.*"]
    },
    "type-check": {
      "dependsOn": ["^build"],
      "outputs": [],
      "inputs": ["src/**/*.ts", "src/**/*.tsx", "tsconfig.json", "tsconfig.build.json"]
    },
    "clean": {
      "cache": false
    }
  },
  "globalEnv": [
    "NODE_ENV",
    "CI",
    "PORT",
    "DATABASE_URL",
    "DATABASE_DIRECT_URL",
    "LOG_LEVEL",
    "SWAGGER_TITLE",
    "SWAGGER_DESCRIPTION",
    "SWAGGER_VERSION",
    "RATE_LIMIT_TTL",
    "RATE_LIMIT_MAX",
    "DATABASE_SSL_CA",
    "DATABASE_IDLE_TIMEOUT",
    "DATABASE_CONNECT_TIMEOUT",
    "LOG_PRETTY",
    "SWAGGER_ENABLED",
    "CORS_ORIGINS",
    "DATABASE_SSL",
    "DATABASE_POOL_MAX",
    "APP_NAME",
    "APP_PORT",
    "APP_HOST",
    "API_PREFIX",
    "API_VERSION",
    "REQUEST_TIMEOUT",
    "SUPABASE_PROJECT_REF",
    "SUPABASE_URL",
    "SUPABASE_ANON_KEY",
    "BETTER_AUTH_URL",
    "BETTER_AUTH_SECRET",
    "GOOGLE_CLIENT_ID",
    "GOOGLE_CLIENT_SECRET",
    "NEXT_PUBLIC_GOOGLE_CLIENT_ID",
    "NEXT_PUBLIC_APP_URL",
    "NEXT_PUBLIC_API_URL",
    "RESEND_API_KEY",
    "EMAIL_FROM"
  ],
  "globalDependencies": ["tsconfig.json", "eslint.config.mjs", ".prettierrc"]
}
